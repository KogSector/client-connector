# Bandit security scanner configuration for client-connector
# https://bandit.readthedocs.io/en/latest/config.html

[bandit]
# Exclude directories from scanning
exclude_dirs = /tests/,/venv/,/.venv/,/__pycache__/

# Skip specific test IDs globally
# B101: assert_used - We use pytest which relies on assert statements in tests
skips = B101
