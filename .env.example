# MCP Host Configuration
MCP_SERVER_PATH=../mcp-server/target/release/mcp-service.exe
MCP_SERVER_MODE=subprocess  # subprocess or http
MCP_SERVER_URL=http://localhost:3004  # if mode=http

# Server
HOST=0.0.0.0
PORT=8095
DEBUG=false

# Authentication
AUTH_MIDDLEWARE_URL=http://localhost:3001
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
API_KEY_HEADER=X-API-Key

# Database (for API keys and sessions)
DATABASE_URL=postgresql+asyncpg://conhub:conhub_password@localhost:5432/conhub

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Session
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_CLIENTS=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
